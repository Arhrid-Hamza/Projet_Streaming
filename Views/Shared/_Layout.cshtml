<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Streaming Platform</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <!-- Ajout de la police Inter -->
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@100..900&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Projet_Streaming.styles.css" asp-append-version="true" />
</head>
<body>
    <header class="sticky-top"> <!-- Rendre la barre de navigation sticky -->
        <nav class="navbar navbar-expand-lg navbar-dark">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    <i class="fas fa-play-circle me-2"></i>StreamFlix
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav me-auto">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="FilmMVC" asp-action="Index">Films</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="SerieMVC" asp-action="Index">Series</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="CategorieMVC" asp-action="Index">Categories</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="GenreMVC" asp-action="Index">Genres</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="UtilisateurMVC" asp-action="Index">Users</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="EpisodeMVC" asp-action="Index">Content</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="AbonnementMVC" asp-action="Index">Business</a>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle text-dark" href="#" id="modelsDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Models
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="modelsDropdown">
                                <li><a class="dropdown-item" asp-controller="UtilisateurMVC" asp-action="Index">Utilisateurs</a></li>
                                <li><a class="dropdown-item" asp-controller="AbonneMVC" asp-action="Index">Abonnes</a></li>
                                <li><a class="dropdown-item" asp-controller="Admin" asp-action="Index">Admins</a></li>
                                <li><a class="dropdown-item" asp-controller="SuperAdmin" asp-action="Index">SuperAdmins</a></li>
                                <li><a class="dropdown-item" asp-controller="Guest" asp-action="Index">Guests</a></li>
                                <li><a class="dropdown-item" asp-controller="Profil" asp-action="Index">Profils</a></li>
                                <li><a class="dropdown-item" asp-controller="Historique" asp-action="Index">Historiques</a></li>
                                <li><a class="dropdown-item" asp-controller="Rating" asp-action="Index">Ratings</a></li>
                                <li><a class="dropdown-item" asp-controller="Watchlist" asp-action="Index">Watchlists</a></li>
                                <li><a class="dropdown-item" asp-controller="Film" asp-action="Index">Films</a></li>
                                <li><a class="dropdown-item" asp-controller="Serie" asp-action="Index">Series</a></li>
                                <li><a class="dropdown-item" asp-controller="Episode" asp-action="Index">Episodes</a></li>
                                <li><a class="dropdown-item" asp-controller="Categorie" asp-action="Index">Categories</a></li>
                                <li><a class="dropdown-item" asp-controller="Genre" asp-action="Index">Genres</a></li>
                                <li><a class="dropdown-item" asp-controller="ContentGenre" asp-action="Index">ContentGenres</a></li>
                                <li><a class="dropdown-item" asp-controller="Abonnement" asp-action="Index">Abonnements</a></li>
                                <li><a class="dropdown-item" asp-controller="Paiement" asp-action="Index">Paiements</a></li>
                            </ul>
                        </li>
                    </ul>
                    <ul class="navbar-nav">
                        <li class="nav-item me-2">
                            <a class="nav-link" href="#"><i class="fas fa-search"></i></a>
                        </li>
                        <!-- Bouton Sign In (Utilisation des classes btn-primary personnalisées) -->
                        <li class="nav-item">
                            <a class="btn btn-primary btn-sm px-3" href="#">Sign In</a>
                        </li>
                        <!-- Remplacement de l'icône utilisateur par le bouton -->
                        @* <li class="nav-item">
                            <a class="nav-link" href="#"><i class="fas fa-user"></i></a>
                        </li> *@
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <!-- Rendre le conteneur principal plus large et sans padding excessif pour les sections plein écran -->
    <div class="container-fluid p-0">
        <main role="main">
            @RenderBody()
        </main>
    </div>

    <footer class="footer text-center">
        <div class="container">
            <p>&copy; 2024 StreamFlix - Your Ultimate Streaming Platform</p>
            <div class="social-links">
                <a href="#" class="text-white me-3"><i class="fab fa-facebook-f"></i></a>
                <a href="#" class="text-white me-3"><i class="fab fa-twitter"></i></a>
                <a href="#" class="text-white me-3"><i class="fab fa-instagram"></i></a>
                <a href="#" class="text-white"><i class="fab fa-youtube"></i></a>
            </div>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>